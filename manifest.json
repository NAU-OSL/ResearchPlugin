{
  "name": "GitHub Tool Tips",
  "version": "1",
  "manifest_version": 2,
  "description": "Helps newcomers navigate GitHub and successfully contribute to open source projects.",
  "permissions": ["tabs", "activeTab", "webNavigation", "<all_urls>", "storage"],
  "browser_action": {
    "name": "GitHub Plugin Development",
    "icons": ["popup/icon.png"],
    "default_icon": "popup/icon.png",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["styles/styles.css"],
      "js": ["libraries/jquery.min.js", "libraries/Chart.bundle.js", "content/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://github.com/*/*"],
      "css": ["styles/styles.css"],
      "js": ["libraries/jquery.min.js", "content/content.js", "content/repositoryLayout.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "persistant": true,
    "scripts": ["background/background.js"]
  },
  "web_accessible_resources": ["*.json", "*.css", "jquery.min.js"],
  "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.5.1.min.js; object-src 'self'"
}
